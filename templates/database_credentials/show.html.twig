{% extends 'base.html.twig' %}

{% block title %}Database credential: {{ database_credentials.name }}{% endblock %}

{% block h1 %}Database credential: {{ database_credentials.name }}{% endblock %}

{% block body %}

	<p>Host: {{ database_credentials.host }}</p>
	<p>User: {{ database_credentials.user }}</p>
	<p>Password: {{ database_credentials.password }}</p>
	<p>Port: {{ database_credentials.port }}</p>

	<a class="btn btn-primary" href="{{ path('app_edit_database_credentials', { 'databaseCredentials': database_credentials.id }) }}">Edit</a>
	<a class="btn btn-primary" href="{{ path('app_check_database_credentials', { 'databaseCredentials': database_credentials.id })}}">Test</a>

	<hr/>

	<p class="danger">Danger zone!</p>

	<a class="btn btn-danger btn-width" href="{{ path( 'app_delete_database_credentials', { 'databaseCredentials': database_credentials.id }) }}">
		Delete
	</a>

{% endblock %}
