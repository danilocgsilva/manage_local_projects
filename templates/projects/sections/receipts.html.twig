	<h2>Receipts:</h2>
	<br />

	{% if project.receipts|length > 0 %}
		<p>This project have {{ project.receipts|length }} receipt(s)</p>
		<ul>
		{% for receipt in project.receipts %}
			<li><a href="{{ path('app_receipt_show', {receipt: receipt.id}) }}">{{ receipt.receipt }}</a></li>
		{% endfor %}
		</ul>
	{% endif %}

	<a href="{{ path('app_project_receipt_new', { project: project.id }) }}" class="btn btn-primary btn-width">
		Create a receipt
	</a>
	<br /><br />
	<a href="{{ path('app_project_bind_receipt', { project: project.id }) }}" class="btn btn-primary btn-width">
		Bind a existing receipt
	</a>
	<br />
	<br />
	<a href="{{ path('app_receipt_index') }}">Check existing receipts</a>