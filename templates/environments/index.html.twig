{% extends 'base.html.twig' %}

{% block title %}Environments{% endblock %}

{% block h1 %}Environment list{% endblock %}

{% block body %}

	{% if environments|length > 0 %}
		<ul>
			{% for environment in environments %}
				<li>
					<a href="{{ path("app_show_environment", {environment: environment.id}) }}">{{ environment.name }}</a>
				</li>
			{% endfor %}
		</ul>
	{% else %}
		<p>Still no environment registered in the platoform</p>
	{% endif %}

{% endblock %}
